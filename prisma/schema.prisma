datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Settings {
  key      String  @id @default(cuid())
  panelURL String?
  panelKey String?
}

model User {
  id       String @id @default(cuid())
  username String
  email    String @unique
  password String

  permissions Int @default(0)
  coins       Int @default(0)

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}
