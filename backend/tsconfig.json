{
	"compilerOptions": {
	  "target": "ES2020",
	  "useDefineForClassFields": true,
	  "lib": ["ES2020"],
	  "module": "NodeNext",
	  "skipLibCheck": true,
	  "outDir": "../dist",
  
	  /* Bundler mode */
	  "moduleResolution": "NodeNext",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  /* Linting */
	  "strict": true,
	  "noUnusedLocals": true,
	  "noUnusedParameters": true,
	  "noFallthroughCasesInSwitch": true
	},
}
  